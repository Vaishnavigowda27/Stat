data <- read.csv("C:/Users/Admin/Downloads/patient-feedback.csv")
summary(data)

fitness <- read.csv("C:/Users/Admin/Downloads/CardioGoodFitness.csv")
num_data <- fitness[sapply(fitness, is.numeric)]

library(GGally)

ggpairs(num_data)
cor_matrix <- cor(num_data)
cor_matrix
cor_matrix[lower.tri(cor_matrix, diag=TRUE)] <- NA
pos <- which.max(cor_matrix)
neg <- which.min(cor_matrix)
cat("Strongest Positive Correlation:", names(cor_matrix)[pos], "=", max(cor_matrix, na.rm=TRUE), "\n")
cat("Strongest Negative Correlation:", names(cor_matrix)[neg], "=", min(cor_matrix, na.rm=TRUE), "\n")
